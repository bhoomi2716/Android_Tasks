<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FoodStation">

    <TextView
        android:id="@+id/icecream_Ing_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients Of Ice Cream"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/icecream_Ing1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 condensed milk"
        android:layout_below="@+id/icecream_Ing_heading"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/icecream_Ing2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 cold milk"
        android:layout_below="@+id/icecream_Ing1"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/icecream_Ing3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Venilla Extract"
        android:layout_below="@+id/icecream_Ing2"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/icecream_Ing4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 heavy cream"
        android:layout_below="@+id/icecream_Ing3"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>