<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PavBhajiIngredients">

    <TextView
        android:id="@+id/pavbhaji_Ing_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients Of Pav Bhaji"
        android:textStyle="bold"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/pavbhaji_Ing1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Vegetables As Per Need"
        android:layout_below="@+id/pavbhaji_Ing_heading"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/pavbhaji_Ing2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Spices As Per Need"
        android:layout_below="@+id/pavbhaji_Ing1"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/pavbhaji_Ing3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Green Chilli Paste"
        android:layout_below="@+id/pavbhaji_Ing2"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/pavbhaji_Ing4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Butter Or Oil"
        android:layout_below="@+id/pavbhaji_Ing3"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/pavbhaji_Ing5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Pav Or Bread"
        android:layout_below="@+id/pavbhaji_Ing4"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>