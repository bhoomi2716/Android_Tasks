<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodStation">

    <TextView
        android:id="@+id/ColdDrinks_Ing_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients Of Cold Drinks"
        android:textStyle="bold"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/ColdDrinks_Ing1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 water"
        android:layout_below="@+id/ColdDrinks_Ing_heading"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/ColdDrinks_Ing2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Sugar"
        android:layout_below="@+id/ColdDrinks_Ing1"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/ColdDrinks_Ing3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Sweetener"
        android:layout_below="@+id/ColdDrinks_Ing2"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/ColdDrinks_Ing4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Carbon Dioxide"
        android:layout_below="@+id/ColdDrinks_Ing3"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/ColdDrinks_Ing5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Flavoring"
        android:layout_below="@+id/ColdDrinks_Ing4"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/ColdDrinks_Ing6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Coloring"
        android:layout_below="@+id/ColdDrinks_Ing5"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/ColdDrinks_Ing7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Additional Ingredients : Citric Acid"
        android:layout_below="@+id/ColdDrinks_Ing6"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="25dp"
        />

</RelativeLayout>