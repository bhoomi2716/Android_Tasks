<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SamosaIngredients">

    <TextView
        android:id="@+id/samosa_Ing_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients Of Samosa"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/samosa_Ing1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 All-Purpose Flour"
        android:layout_below="@+id/samosa_Ing_heading"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/samosa_Ing2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Masala Filling"
        android:layout_below="@+id/samosa_Ing1"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/samosa_Ing2.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\t \t \u276F Potatoes
                    \n\t \t \u276F Peas
                    \n\t \t \u276F Green Chili
                    \n\t \t \u276F Coriander"
        android:layout_below="@+id/samosa_Ing2"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/samosa_Ing3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Spices"
        android:layout_below="@+id/samosa_Ing2.1"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/samosa_Ing3.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\t \t \u276F Cumin Seeds
                    \n\t \t \u276F Garam Masala
                    \n\t \t \u276F Chili Powder
                    \n\t \t \u276F Amchur Powder
                    \n\t \t \u276F Turmeric"
        android:layout_below="@+id/samosa_Ing3"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>