<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodStation">

    <TextView
        android:id="@+id/dosa_Ing_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients Of Masala Dosa"
        android:textStyle="bold"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        />

    <!-- ============================================================== -->

    <TextView
        android:id="@+id/dosa_Ing1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Dosa Batter"
        android:layout_below="@+id/dosa_Ing_heading"
        android:textSize="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/dosa_Ing1.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\t \t \u276F Parboiled rice
                       \n\t \t \u276F Urad dal
                       \n\t \t \u276F Fenugreek seeds
                       \n\t \t \u276F Salt"
        android:layout_below="@+id/dosa_Ing1"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

    <!-- ============================================================== -->

    <TextView
        android:id="@+id/dosa_Ing2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Masala Filling"
        android:layout_below="@+id/dosa_Ing1.1"
        android:textSize="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/dosa_Ing2.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\t \t \u276F Boiled potatoes
                    \n\t \t \u276F Cumin Seeds
                    \n\t \t \u276F Mustard Seeds
                    \n\t \t \u276F Oil
                    \n\t \t \u276F Needed Spices
                    \n\t \t \u276F Curry Leaves"
        android:layout_below="@+id/dosa_Ing2"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>