        <!-- ================================================ -->

        <ImageView
            android:id="@+id/colddrinks_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/colddrinks"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/tool"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/colddrinks_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cold Drinks"
            android:gravity="center_horizontal"
            android:layout_below="@id/colddrinks_img"
            android:textSize="30dp"
            />

        <!-- ================================================ -->

        <ImageView
            android:id="@+id/dosa_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/colddrinks_txt"
            android:layout_marginTop="85dp"
            android:gravity="center_horizontal"
            android:src="@drawable/dosa" />

        <TextView
            android:id="@+id/dosa_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masala Dosa "
            android:gravity="center_horizontal"
            android:layout_below="@id/dosa_img"
            android:textSize="30dp"
            />

        <!-- ================================================ -->

        <ImageView
            android:id="@+id/frenchfries_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/dosa_txt"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            android:src="@drawable/frenchfries" />

        <TextView
            android:id="@+id/frenchfries_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="French Fries"
            android:gravity="center_horizontal"
            android:layout_below="@id/frenchfries_img"
            android:textSize="30dp"
            />

        <!-- ================================================ -->

        <ImageView
            android:id="@+id/icecream_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/icecream"
            android:layout_below="@id/frenchfries_txt"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/icecream_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ice Cream"
            android:gravity="center_horizontal"
            android:layout_below="@id/icecream_img"
            android:textSize="30dp"
            />

        <!-- ================================================ -->

        <ImageView
            android:id="@+id/panipuri_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/panipuri"
            android:layout_below="@id/icecream_txt"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/panipuri_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pani Puri"
            android:gravity="center_horizontal"
            android:layout_below="@id/panipuri_img"
            android:textSize="30dp"
            />

        <!-- ================================================ -->

        <ImageView
            android:id="@+id/pastry_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pastry"
            android:layout_below="@id/panipuri_txt"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/pastry_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pineapple Pastry"
            android:gravity="center_horizontal"
            android:layout_below="@id/pastry_img"
            android:textSize="30dp"
            />

        <!-- ================================================ -->

        <ImageView
            android:id="@+id/pavbhaji_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pavbhaji"
