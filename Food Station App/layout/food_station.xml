        <TextView
            android:id="@+id/pavbhaji_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pav Bhaji"
            android:gravity="center_horizontal"
            android:layout_below="@id/pavbhaji_img"
            android:textSize="30dp"
            />

        <!-- ================================================ -->

        <ImageView
            android:id="@+id/pizza_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pizza"
            android:layout_below="@id/pavbhaji_txt"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/pizza_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza"
            android:gravity="center_horizontal"
            android:layout_below="@id/pizza_img"
            android:textSize="30dp"
            />

        <!-- ================================================ -->

        <ImageView
            android:id="@+id/samosa_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/samosa"
            android:layout_below="@id/pizza_txt"
